  p.mb-3 Sur cette page, vous allez pouvoir configurer de manière avancée l'orientation de l'histoire.

  p Amusez-vous à faire des combinaisons inédites pour plus de fun !
  p Par exemple: <strong>Zinédine Zidane</strong> héros d'une aventure <strong>dans la jungle</strong>, écris avec le style de <strong>Stephen King</strong> le tout saupoudré de <strong>romance</strong> !

= simple_form_for @story,
                  html: { \
                    class: 'flex flex-col items-center gap-6 justify-between bg-gray-100 rounded-lg p-5', \
                    data: { turbo: false } \
                  } do |f|
  p.text-secondary-color.text-xl.font-semibold.mb-3.border-b.border-secondary-color.text-left.w-full Général

  .flex.flex-col.lg:flex-row.gap-3.justify-between.w-full.mb-2
    = f.association :nostr_user,
                    collection: story_nostr_users_select_options,
                    include_blank: false,
                    label_html: { class: 'block italic mb-2' },
                    input_html: { \
                      class: 'w-full', \
                      data: { \
                        controller: 'slim-select' \
                      } \
                    }, \
                    wrapper_html: { class: 'text-center w-full' }

    = f.input :mode,
              collection: select_options_for(Story, :modes),
              include_blank: false,
              label_html: { class: 'block italic mb-2' },
              input_html: { \
                class: 'w-full', \
                data: { \
                  controller: 'slim-select', \
                  slim_select_show_search_value: false, \
                  action: 'change->slim-select#togglePromptSystem' \
                } \
              }, \
              wrapper_html: { class: 'text-center w-full' }

    = f.input :publication_rule,
              collection: select_options_for(Story, :publication_rules),
              include_blank: false,
              label_html: { class: 'block italic mb-2' },
              input_html: { \
                class: 'w-full', \
                data: { \
                  controller: 'slim-select', \
                  slim_select_show_search_value: false \
                } \
              }, \
              wrapper_html: { class: 'text-center w-full' }

  .flex.flex-col.lg:flex-row.items-center.gap-6.w-full.mb-6
    = f.association :thematic,
                    collection: Thematic.enabled,
                    include_blank: '[Aléatoire]',
                    label_html: { class: 'block italic mb-2' },
                    input_html: { \
                      class: 'w-full', \
                      data: { \
                        controller: 'slim-select' \
                      } \
                    }, \
                    wrapper_html: { class: 'text-center w-full' }

    = f.association :characters,
                    collection: story_characters_select_options,
                    include_blank: false,
                    label_html: { class: 'block italic mb-2' },
                    input_html: { \
                      class: 'w-full', \
                      data: { \
                        controller: 'slim-select', \
                        slim_select_close_on_select_value: false \
                      } \
                    }, \
                    wrapper_html: { class: 'text-center w-full' }

    = f.association :places,
                    collection: story_places_select_options,
                    include_blank: false,
                    label_html: { class: 'block italic mb-2' },
                    input_html: { \
                      class: 'w-full', \
                      data: { \
                        controller: 'slim-select', \
                        slim_select_close_on_select_value: false \
                      } \
                    }, \
                    wrapper_html: { class: 'text-center w-full' }

  .w-full.mb-6
    = f.simple_fields_for :options, f.object.options do |ff|
      .flex.flex-col.gap-6
        section.mb-5
          p.text-secondary-color.text-xl.font-semibold.mb-3.border-b.border-secondary-color Options

          .grid.grid-cols-1.lg:grid-cols-4.gap-3.mb-5
            = ff.input :minimum_chapters_count
            = ff.input :maximum_chapters_count
            = ff.input :minimum_poll_sats
            = ff.input :maximum_poll_sats

          = ff.input :publish_previous

        section.mb-5
          p.text-secondary-color.text-xl.font-semibold.mb-3.border-b.border-secondary-color Média

          .flex.flex-col.lg:flex-row.justify-center.gap-6
            = f.association :media_prompt,
                            collection: MediaPrompt.enabled.available.by_position,
                            include_blank: false,
                            input_html: { \
                              class: 'w-full', \
                              data: { \
                                controller: 'slim-select' \
                              } \
                            },
                            wrapper_html: { class: 'text-center w-full' }

            = ff.input :stable_diffusion_prompt,
                       wrapper_html: { class: 'w-full' }

            = ff.input :stable_diffusion_negative_prompt,
                       wrapper_html: { class: 'w-full' }

        section.mb-5
          p.text-secondary-color.text-xl.font-semibold.mb-3.border-b.border-secondary-color Narration

          .flex.flex-col.lg:flex-row.justify-center.gap-6
            = f.association :narrator_prompt,
                            collection: NarratorPrompt.enabled.available.by_position,
                            include_blank: false,
                            input_html: { \
                              class: 'w-full', \
                              data: { \
                                controller: 'slim-select' \
                              } \
                            },
                            wrapper_html: { class: 'text-center w-full' }

            = f.association :atmosphere_prompt,
                            collection: AtmospherePrompt.enabled.available.by_position,
                            include_blank: false,
                            input_html: { \
                              class: 'w-full', \
                              data: { \
                                controller: 'slim-select' \
                              } \
                            },
                            wrapper_html: { class: 'text-center w-full' }

            = ff.input :chatgpt_full_story_system_prompt,
                       as: :text,
                       input_html: { class: 'h-36' },
                       wrapper_html: { \
                         id: 'extra_complete_text', \
                         class: 'w-full' \
                       }

            = ff.input :chatgpt_dropper_story_system_prompt,
                       as: :text,
                       input_html: { class: 'h-36' },
                       wrapper_html: { \
                         id: 'extra_dropper_text', \
                         class: 'w-full hidden' \
                       }

  = f.button :submit, 'Créer une aventure sur mesure',
             class: 'bg-green-600 p-2 rounded-lg text-white cursor-pointer hover:bg-green-500 transition-colors'
